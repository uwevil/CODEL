<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">

	<class name="Contact" discriminator-value="C">
		<id name="id" type="long" column="ID_CONTACT" > 
			<generator class="native"/>
		</id>
		
		<discriminator column="subclass" type="character"></discriminator>
		
		<property name="firstName" column="FIRST_NAME" type="string" not-null="true"></property>
		<property name="lastName" column="LAST_NAME" type="string"></property>
		<property name="email" column="EMAIL" type="string"></property>
		
		<many-to-one name="address" column="ID_ADDRESS" unique="true" not-null="true" fetch="select" cascade="persist, all-delete-orphan"/>
		
		<set name="phoneNumbers" inverse="true" fetch="join" cascade="persist">
      	  <key column="ID_CONTACT"/>
       	  <one-to-many class="PhoneNumber"/>
   		</set>
   		
   		<set name="books" table="groupBooks" fetch="subselect" cascade="persist">
   			<key column="ID_CONTACT"></key>
   			<many-to-many class="ContactGroup" column="GROUPID"></many-to-many>
   		</set>
   		
   		<subclass name="Entreprise" discriminator-value="E">
			<property name="numSiret" column="NUMSIRET" type="long"></property>
		</subclass>
		
	</class>


</hibernate-mapping>
