<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
    version="3.0"
    metadata-complete="true">
    
  <display-name>codel</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>login.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.doancaosang.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewContact</servlet-name>
    <servlet-class>com.doancaosang.NewContact</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewContact</servlet-name>
    <url-pattern>/addContact</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteContact</servlet-name>
    <servlet-class>com.doancaosang.DeleteContact</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SearchContact</servlet-name>
    <servlet-class>com.doancaosang.SearchContact</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteContact</servlet-name>
    <url-pattern>/deleteContact</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SearchContact</servlet-name>
    <url-pattern>/searchContact</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateContact</servlet-name>
    <servlet-class>com.doancaosang.UpdateContact</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateContact</servlet-name>
    <url-pattern>/updateContact</url-pattern>
  </servlet-mapping>
</web-app>